# Kalshi News Pipeline — Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# ── Alpaca (required) ─────────────────────────────────────────────────────────
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# ── NLP tuning (optional — defaults shown) ────────────────────────────────────
# NLP_ARTICLE_MODE options: "deep" (local FinBERT) | "modal" (remote GPU via Modal)
NLP_HEADLINE_MODE=fast
NLP_ARTICLE_MODE=deep
NLP_MIN_SIGNAL_SCORE=0.35

# ── Pipeline tuning (optional — defaults shown) ───────────────────────────────
EVENT_QUEUE_MAXSIZE=10000
DEDUP_WINDOW_SIZE=50000
LOG_LEVEL=INFO
